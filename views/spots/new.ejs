<% layout('layouts/boilerplate') %>
<div class="row">
    <h1 class="text-center">New Spot</h1>
    <div class="col-6 offset-3">
        <form action="/spots" method="POST" novalidate class="validated-form">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="spot[title]" required>
                <div class="valid-feedback">OK</div>    
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="spot[location]" required>  
                <div class="valid-feedback">OK</div>      
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Image Url</label>
                <input class="form-control" type="text" id="image" name="spot[image]" required> 
                <div class="valid-feedback">OK</div>       
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">DateSpot price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" id="price" placeholder="0.00" 
                    aria-label="price" aria-describedby="price-label" name="spot[price]" required>
                    <div class="valid-feedback">OK</div>    
                  </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="spot[description]" required></textarea> 
                <div class="valid-feedback">OK</div>       
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Add Spot</button>
            </div>
        </form>
        <a href="/spots">All Spots</a>
    </div>
</div>

   
